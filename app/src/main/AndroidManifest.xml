<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahorcado">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ahorcado.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ahorcado.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.example.ahorcado.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.ahorcado.ResultadosActivity"
            android:label="@string/title_activity_resultados"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.ahorcado.OpcionesActivity"
            android:label="@string/title_activity_opciones"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.ahorcado.AcercaDeActivity"
            android:label="@string/title_activity_acerca_de"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
